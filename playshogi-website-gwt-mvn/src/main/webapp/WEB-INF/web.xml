<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

    <!-- Servlets -->

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.playshogi.website.gwt.server.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/playshogiwebsite/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>positionSharing</servlet-name>
        <servlet-class>com.playshogi.website.gwt.server.PositionSharingServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>positionSharing</servlet-name>
        <url-pattern>/playshogiwebsite/positionSharing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>problems</servlet-name>
        <servlet-class>com.playshogi.website.gwt.server.ProblemsServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>problems</servlet-name>
        <url-pattern>/playshogiwebsite/problems</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>kifus</servlet-name>
        <servlet-class>com.playshogi.website.gwt.server.KifuServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>kifus</servlet-name>
        <url-pattern>/playshogiwebsite/kifus</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>ShogiBoard.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>ExpiresFilter</filter-name>
        <filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
        <init-param>
            <param-name>ExpiresByType application/javascript</param-name>
            <param-value>access plus 1 minutes</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>/playshogiwebsite/playshogiwebsite.nocache.js</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>
